<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:id="@+id/sectionTitle">

        <TextView
            android:id="@+id/list_header"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/header_plain"
            android:gravity="center"
            android:textSize="18dip" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:id="@+id/east"
            android:src="@drawable/east_on"
            android:padding="10dip"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:id="@+id/midwest"
            android:src="@drawable/midwest_off"
            android:padding="10dip"
            android:layout_toRightOf="@+id/east" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:id="@+id/west"
            android:src="@drawable/west_off"
            android:padding="10dip"
            android:layout_toLeftOf="@+id/south" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:id="@+id/south"
            android:src="@drawable/south_off"
            android:layout_alignParentRight="true"
            android:padding="10dip" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/standings_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sectionTitle"></android.support.v4.view.ViewPager>

</RelativeLayout>