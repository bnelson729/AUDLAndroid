<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dip"
    android:orientation="horizontal">
 
    <!--  ListRow Left sided Thumbnail image for Home Team -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dip"
        android:id="@+id/imageView"
        android:background="@drawable/greybar_nodiv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout android:id="@+id/teamThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip">
 
        <ImageView
            android:id="@+id/teamIcon"
            android:layout_width="50dip"
            android:layout_height="50dip" />
 
    </LinearLayout>
    
    <!--  ListRow Left sided Thumbnail image for Home Team -->

    <!-- Schedule Entry Text-->

    <RelativeLayout android:id="@+id/wlDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/teamThumbnail">


        <TextView
            android:id="@+id/wlHeader"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/wlValue"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/wlHeader"
            android:gravity="right"
            android:textSize="24dip" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/pmDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/teamThumbnail">


        <TextView
            android:id="@+id/pmHeader"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/pmValue"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pmHeader"
            android:gravity="left"
            android:textSize="24dip" />

    </RelativeLayout>

</RelativeLayout>