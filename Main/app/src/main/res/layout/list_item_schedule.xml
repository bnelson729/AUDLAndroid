<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dip"
    android:orientation="horizontal">
 
    <!--  ListRow Left sided Thumbnail image for Home Team -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dip"
        android:id="@+id/imageView"
        android:background="@drawable/greybar_nodiv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout android:id="@+id/homeTeamThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip">
 
        <ImageView
            android:id="@+id/homeTeamIcon"
            android:layout_width="50dip"
            android:layout_height="50dip"/>
 
    </LinearLayout>
    
    <!--  ListRow Left sided Thumbnail image for Home Team -->
    <LinearLayout android:id="@+id/awayTeamThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip">
 
        <ImageView
            android:id="@+id/awayTeamIcon"
            android:layout_width="50dip"
            android:layout_height="50dip"/>
 
    </LinearLayout>
 
    <!-- Schedule Entry Text-->

    <RelativeLayout android:id="@+id/gameDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/homeTeamThumbnail"
        android:layout_toLeftOf="@+id/awayTeamThumbnail">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/teams"
            android:gravity="center">

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"

                android:gravity="bottom|center_horizontal"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:text="vs"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="3dip"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/hometeam"

                android:gravity="bottom|right"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/vs"
                android:layout_marginRight="5dip"
                android:layout_alignParentBottom="true"
                android:textSize="24dip" />

            <TextView
                android:id="@+id/awayteam"

                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="left|bottom"
                android:layout_toRightOf="@+id/vs"
                android:layout_marginLeft="5dip"
                android:layout_alignParentBottom="true"
                android:textSize="24dip" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gametime"
            android:layout_below="@+id/teams"
            android:gravity="center"
            android:textSize="12dip" />

    </RelativeLayout>


</RelativeLayout>