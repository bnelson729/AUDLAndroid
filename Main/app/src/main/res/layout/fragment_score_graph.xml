<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graphUnavalaible"
        android:layout_gravity="center"
        android:id="@+id/graphStatus"
        android:visibility="gone"
        android:layout_margin="10dip"
        android:textSize="12dip" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:id="@+id/graph1"
        android:layout_weight="1"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="30dip" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:id="@+id/legend">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legendAxis"
            android:layout_gravity="center_vertical"
            android:textSize="12dip" />

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:id="@+id/awayColor"
            android:background="@color/graph_away"
            android:layout_marginLeft="40dip"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legendAway"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:textSize="12dip" />

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:id="@+id/homeColor"
            android:background="@color/graph_home"
            android:layout_marginLeft="20dip"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legendHome"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:textSize="12dip" />
    </LinearLayout>

</LinearLayout>